{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./src/",
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "src/common/*"
      ],
      "bot/*": [
        "src/bot/*"
      ],
      "spectator/*": [
        "src/spectator/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true
}